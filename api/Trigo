;STATIC
;  IN
;    d0.w = x (basic parameter)
;    d1.w = A * 256
;    d2.w = c * 256
;  OUT
;    d0.w = A * sin(360deg * x / 512) + c
Trigo_Sine
	movem.l	d3-4/a0,-(a7)
	and.w	#$7FF,d0
	clr.w	d3	;d3 = flag for sine in minus area
	btst	#10,d0	;check whether in [180,360)
	beq	Trigo_SineLowerThan180
	move.w	#1,d3
	bclr	#10,d0	;ensure x in [0,180)
Trigo_SineLowerThan180
	btst	#9,d0	;check whether in [90,180)
	beq	Trigo_SineLowerThan90
	eor.w	#1023,d0	;ensure x in [0,90)
Trigo_SineLowerThan90
	lea	Trigo_SinusTable,a0
	clr.w	d4
	move.b	(a0,d0),d4
	mulu	d1,d4
	clr.l	d0
	move.w	d2,d0
	lsl.l	#8,d0
	tst.w	d3
	bne	Trigo_SineMinus
	add.l	d4,d0
	bra	Trigo_SineEnd
Trigo_SineMinus
	sub.l	d4,d0
Trigo_SineEnd
	swap	d0
	movem.l	(a7)+,d3-4/a0
	rts

;STATIC
;  same as Sine
Trigo_Cosine
	add.w	#512,d0
	bsr	Trigo_Sine
	rts

;values correspond to 0 degrees to 90-epsilon
;512 values in [0,256)
